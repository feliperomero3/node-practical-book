{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Attach",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "runtimeExecutable": "npm",
      "localRoot": "${workspaceFolder}\\expressapp",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "DEBUG": "expressapp:*"
      },
      "console": "integratedTerminal"
    }
  ]
}
